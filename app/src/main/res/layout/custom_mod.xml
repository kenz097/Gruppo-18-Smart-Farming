 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/relativeCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Modifica nome del solco"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
     <TextView
         android:id="@+id/textCustom"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/relativeCustom"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="15dp"
         android:text="Inserisci il nuovo nome del solco"
         android:textSize="18sp"
         android:gravity="center"
         android:textStyle="bold" />
     <RelativeLayout
         android:id="@+id/relsecond"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textCustom"
         android:layout_marginTop="20dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Nome nuovo solco"
             android:textSize="18sp"
             android:textStyle="bold"
             android:id="@+id/textSolco"
             android:layout_marginLeft="20dp"/>
         <EditText
             android:id="@+id/newNameSolco"
             android:layout_width="220dp"
             android:layout_height="30dp"
             android:background="@drawable/et_style"
             android:layout_toRightOf="@id/textSolco"
             android:inputType="textEmailAddress"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             />
     </RelativeLayout>
</RelativeLayout>